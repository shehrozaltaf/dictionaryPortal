<layout xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:tools="http://schemas.android.com/tools" 
  xmlns:app="http://schemas.android.com/apk/res-auto"> 
    <data> 
        <import type="android.view.View" /> 
        <variable name="callback" type="edu.aku.hassannaqvi.template.ui.Myactivity"/>
    </data> 
    <ScrollView   android:fadeScrollbars="false"  android:fillViewport="true" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:scrollbarSize="10dip" tools:context=".ui.Myactivity">
   <LinearLayout android:id="@+id/GrpName" android:layout_width="match_parent"  android:layout_height="wrap_content"android:orientation="vertical">

 <!-- s1q1  Input-Numeric   -->
<androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVs1q1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView 
                        android:text="@string/s1q1" 
                        android:layout_width="match_parent"
                        android:layout_height="56dp"  
                        android:layout_marginTop="12dp" 
                        /><com.edittextpicker.aliazaz.EditTextPicker
                                    android:id="@+id/s1q1"
                                    android:layout_width="match_parent"
                                    android:layout_height="56dp"  
                                    android:inputType="number"
                                     android:layout_marginBottom="12dp"
                                    android:hint="@string/s1q1"
                                    app:mask="##"
                                    app:maxValue="0"
                                    app:minValue="0"
                                    app:type="range" /> </LinearLayout>
            </androidx.cardview.widget.CardView>

