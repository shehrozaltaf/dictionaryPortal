            <!-- s4q1  Radio   -->
            <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVs4q1"
                    style="@style/cardView"
            >

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                >
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom">
                    <TextView
                            android:id="@+id/qtxt_s4q1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_s4q1"
                            android:text="@string/s4q1"/>
                    <TextView
                            android:id="@+id/q_s4q1"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_s4q1"
                            android:layout_alignBottom="@id/qtxt_s4q1"
                            android:text="@string/Q_s4q1"/>
                    </RelativeLayout>
                    <RadioGroup
                            android:id="@+id/s4q1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <RadioButton
                                android:id="@+id/s4q1a01"
                                android:text="@string/s4q1a01"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                        />
                        <RadioButton
                                android:id="@+id/s4q1a02"
                                android:text="@string/s4q1a02"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                        />
                        <RadioButton
                                android:id="@+id/s4q1b"
                                android:text="@string/s4q1b"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/s4q1bx"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/s4q1b"
                                android:tag="s4q1b"
                                android:inputType="number"
                                android:maxLength="2"
                                app:maxValue="15"
                                app:minValue="1"
                                app:type="range"
                                android:text='@{s4q1b.checked ? s4q1bx.getText().toString() : ""}'
                                android:visibility='@{s4q1b.checked? View.VISIBLE : View.GONE}'/>
                        <RadioButton
                                android:id="@+id/s4q1c"
                                android:text="@string/s4q1c"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        <EditText
                                android:id="@+id/s4q1cx"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/s4q1c"
                                android:digits="AaBaCcDdEeFfGgHhIiJjKkLlMmNnOoPpQqRrSsTtUuVvWwXxYyZz0123456789,. "
                                android:tag="s4q1c"
                                android:text='@{s4q1c.checked ? s4q1cx.getText().toString() : ""}'
                                android:visibility='@{s4q1c.checked? View.VISIBLE : View.GONE}'/>
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

